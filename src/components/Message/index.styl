.clear {
    .item {
        max-width: 100%;
        position: relative;
        clear: both;
        display: inline-block;
        margin-bottom :10px

        .img {
            max-width: 200px;
            border-radius 10px;
        }

        .name {
            width: 280px;
            overflow: hidden;
            -ms-text-overflow: ellipsis;
            text-overflow: ellipsis;
            white-space: nowrap;
            color: #999;
            font-size :12px;
            font-weight lighter
        }

        .msg {
            word-break: break-all;
        }

        .time {
            position: absolute;
            top: -40px;
            width: 200px;
            height: 20px;
            right: -70px;
        }

        .head-place {
            display: block;
            width: 36px;
            height: 36px;
            position: absolute;
            top: 0;
            background: #fff;
            border-radius: 50px;
            overflow: hidden;
        }

        .head {
            width: 36px;
            height: 36px;
            border-radius: 36px;
        }
        .msg-wrap {
          display inline-block
          position :relative;
          padding :5px 12px;
          border-radius :10px;
          &:after {
            position: absolute;
            top: 10px;
            content: '';
            width: 0;
            height: 0;
          }
        }


    }
}

.left {
    .item {
        // animation: show-chat-even 0.25s 1 ease-in
        float: left;
        padding-left 50px;
        color: #313035;
        .msg-wrap {
          background: #fff;
          &:after {
            left: -9px;
            border-top: 10px solid #fff;
            border-left: 10px solid transparent;
          }
        }
    }

    .name {
        text-align: left;
    }

    .time {
        text-align: left;
    }

    .head-place {
        left: 0;
    }
}

.right {
    .item {
        // animation: show-chat-odd 0.25s 1 ease-in
        float: right;
        color: #fff;
        padding-right 50px;
        text-align :right ;
      .msg-wrap {
        background: #2196f3;
        &:after {
          right: -9px;
          border-top: 10px solid #2196f3;
          border-right: 10px solid transparent;
        }
      }

    }

    .name {
        text-align: right;
    }

    .time {
        text-align: right;
    }

    .head-place {
        right: 0;
    }

    @keyframes show-chat-odd {
        0% {
            margin-right: -480px;
        }

        100% {
            margin-right: 0;
        }
    }

    @keyframes show-chat-even {
        0% {
            margin-left: -480px;
        }

        100% {
            margin-left: 0;
        }
    }
}
